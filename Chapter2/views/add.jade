extends layout

block content
    h1 Create a new chat room
    form(method="post")
        fieldset.form-group
            label(for="name") Name:
            input.form-control(name="name", type="text", placeholder="Enter name")
            small.text-muted Give your chat room
        button.btn.btn-primary(type="submit") Save
        a.btn.btn-default(href="/admin/rooms") Cancel


